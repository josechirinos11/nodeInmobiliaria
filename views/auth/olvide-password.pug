extends ../layout/index

block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            sapn.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= paguina

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-2
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.mt-3.font-bold(for="email") Email de Registro
