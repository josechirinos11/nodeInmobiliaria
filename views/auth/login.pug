extends ../layout/index

block contenido 
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            sapn.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= paguina
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        if mensaje
            div(class="max-w-md mx-auto my-10")
                p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= mensaje
        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-2(method="POST" action="/auth/login" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-3.mt-3.font-bold(for="email") Email de Registro
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.mt-3.font-bold(for="password") Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Password" type="password" name="password")
                    div.flex.items-center.justify-between 
                        a.mt-5.text-gray-500.text-xs(href="/auth/registro") Â¿No tienes cuenta? Registrate
                        a.mt-5.text-gray-500.text-xs(href="/auth/olvide-password") Olvide mi Password
                    div(class="pt-5 flex justify-center")
                        input(class="max-w-80 rounded-md border border-gray-300 w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Iniciar Sesion")



                        